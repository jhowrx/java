package com.softgraf.entity;

import javax.persistence.EntityManager;
import javax.persistence.EntityTransaction;

import com.softgraf.util.JpaUtil;

public class Atualizando1 {

	public static void main(String[] args) {
		
		Endereco rua = new Endereco("Rua Dr. Colarres, 123", "Ponta Grossa", "PR");
		Cliente luiz = new Cliente("Luiz Carlos", rua);
		
		EntityManager em = JpaUtil.getEntityManager(); //obtem o entityManager (grava, lista, busca e apaga entidades)
		EntityTransaction tx = em.getTransaction();
		
		
		//inicia a transação
		tx.begin();
		
		//salva o cliente
		em.persist(luiz);
		
		//Confirma a transação
		tx.commit();
		
		em.close();
		JpaUtil.close();

	}

}
